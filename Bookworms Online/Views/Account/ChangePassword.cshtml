@model Bookworms_Online.Models.ChangePasswordViewModel

<h2>Change Password</h2>

<form method="post" asp-controller="Account" asp-action="ChangePassword">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label asp-for="CurrentPassword"></label>
        <input asp-for="CurrentPassword" type="password" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" type="password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit">Change Password</button>
</form>

<a asp-controller="Account" asp-action="Manage">Back to Manage</a>